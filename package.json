{
  "name": "@bear_ai/nexus-flow",
  "version": "0.1.0-alpha.0",
  "description": "Universal AI orchestrator - portal to any flow (claude-flow, qwen-flow, copilot-flow) with queen bee coordination system",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "nexus-flow": "./bin/nexus-flow.js",
    "nexus": "./bin/nexus-flow.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "echo 'Alpha release - no build required'",
    "dev": "tsx src/cli/main.ts",
    "start": "node src/cli/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "node scripts/run-tests.js --type unit",
    "test:integration": "node scripts/run-tests.js --type integration",
    "test:e2e": "node scripts/run-tests.js --type e2e",
    "test:performance": "node scripts/run-tests.js --type performance",
    "test:all": "node scripts/run-tests.js --type all",
    "test:health": "node scripts/test-health-check.js",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "nexus:portal": "node dist/cli/main.js portal",
    "nexus:queen": "node dist/cli/main.js queen",
    "nexus:hive": "node dist/cli/main.js hive-mind"
  },
  "keywords": [
    "ai",
    "orchestration",
    "multi-llm",
    "claude-flow",
    "gemini-flow",
    "qwen-flow",
    "deepseek-flow",
    "copilot-flow",
    "queen-bee",
    "hive-mind",
    "portal",
    "coordination",
    "swarm",
    "agentic",
    "nexus"
  ],
  "author": "nexus-flow contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexus-flow/nexus-flow.git"
  },
  "bugs": {
    "url": "https://github.com/nexus-flow/nexus-flow/issues"
  },
  "homepage": "https://github.com/nexus-flow/nexus-flow#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "better-sqlite3": "^12.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6",
    "open": "^8.4.2",
    "openai": "^5.19.1",
    "ora": "^5.4.1",
    "winston": "^3.15.0",
    "zod": "^3.22.4",
    "axios": "^1.6.0",
    "eventemitter3": "^5.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yaml": "^2.8.0",
    "p-queue": "^7.4.1",
    "p-retry": "^5.1.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "bin/**/*",
    "src/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "IMPLEMENTATION_SUMMARY.md"
  ]
}